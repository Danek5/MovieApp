    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Components\Layout\Footer.razor.css" />
    <None Remove="Components\Layout\TopNavMenu.razor.css" />
    <None Remove="Components\Pages\Movie.razor.css" />
    <None Remove="Components\Ui\Paginator.razor.css" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Components\Layout\Footer.razor.css" />
    <Content Include="Components\Layout\TopNavMenu.razor.css" />
